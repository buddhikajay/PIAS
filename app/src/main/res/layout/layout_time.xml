    <GridLayout
        android:columnCount="3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/time_cancel"
        android:layout_centerInParent="true"

        android:id="@+id/gridLayout">

        <Spinner
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/month"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/ampm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </GridLayout>

    <ImageButton
        android:id="@+id/time_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@raw/okk"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/time_ok"
        android:layout_toStartOf="@+id/time_ok" />
    <ImageButton
        android:id="@+id/time_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@raw/right"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout" />



</RelativeLayout>

